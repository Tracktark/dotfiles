for_window [title="doom-capture"] floating enable
for_window [title="zenity"] floating enable
for_window [class="Alacritty" workspace="2:Emacs"] resize set height 30 ppt
for_window [class="Alacritty" ] floating enable

set $power_mode "power"
bindsym $mod+Shift+p mode $power_mode
mode $power_mode {
     bindsym l exec --no-startup-id lock; mode "default"
     bindsym d exec --no-startup-id xset dpms force standby; mode "default"
     bindsym Return mode "default"
     bindsym Escape mode "default"
     bindsym $mod+Shift+p mode "default"
}

